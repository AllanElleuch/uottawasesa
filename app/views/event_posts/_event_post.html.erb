<div class="event-post">


	<div class="title">
		<%= event_post.title %>	
	</div>

	<div class="sign">
		<p><%= event_post.created_at.try(:strftime, "%a %B %Y") %> by <%= event_post.signature %> </p>
	</div>

	<div class="body">
		<%= event_post.body %>
	</div>


	<% if admin? %>
		<div class="actions">
			<br><%= link_to "Edit", 
		        edit_event_post_path(event_post) %>
		        |
			<%= link_to "Delete", 
			            event_post, 
			            method: :delete,
			            confirm: "Are you sure you want to delete the event post?" %>	
		</div>

	<% end %>

</div>