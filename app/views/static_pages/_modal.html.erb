<div class="modal hide" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="top:2%; bottom:1%;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">SESA FORM</h4>
      </div>
      <div class="modal-body" style="max-height:100%; height: auto;">
        
<div class="form">

<% if @success %>
	<p style="text-align:center;"> Thank you for joining the SESA! </p>
<% else %>
		<p>
			<%= form_for @club_member, url: {action: "home"} do |f| %>

			<div class="field">
				<%= f.label :first_name, "First Name" %>
				<%= f.text_field :first_name %><br>
			</div>

			<div class="field">
				<%= f.label :last_name, "Last Name" %>
				<%= f.text_field :last_name %><br>
			</div>

			<div class="field">
				<%= f.label :email, "E-mail Address" %>
				<%= f.text_field :email %><br>
			</div>

			<div class="field">
				<%= f.label :major, "Major or Specialization" %>
				<%= f.text_field :major %><br>
			</div>


			<div class="field">
				<%= f.label :commitment, "Level of commitment(#hours/weeks)" %>
				<%= f.text_area :commitment %><br>
			</div>


			<div class="field">
				<%= f.label :why_join, "Why would you want to be a part of SESA" %>
				<%= f.text_area :why_join %><br>
			</div>


			<div class="field">
				<%= f.label :goal, "What goals would you like to achieve while working with SESA" %>
				<%= f.text_area :goal %><br>
			</div>

			<div class="field" >
				<%= f.submit "Join the SESA"%>
			</div>

			<% end %>
		</p>
		<% end %>
</div>

      </div>
    </div>
  </div>
</div>